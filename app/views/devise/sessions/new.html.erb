<div class="card mx-auto" style="max-width: 45em;">
  <div class="card-header">
    <h2 class="text-center card-title mb-4">Log in</h2>
  </div>

  <div class="card-body p-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="mb-3 row">
          <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
      
          <%= f.label :password, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-4">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="text-center form-check">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions text-center mt-4">
        <%= f.submit "Log in", class: "btn btn-outline-success" %>
      </div>
    <% end %>
  </div>
</div>

